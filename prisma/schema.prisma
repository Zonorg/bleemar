generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid()) @map("_id")
  name      String   @default("Empleado")
  username  String   @unique
  password  String
  role      String   @default("Empleado")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Roll {
  id             String        @id @default(uuid()) @map("_id")
  order_number   Int
  name           String
  size           String
  workshop       String
  total_quantity Int
  order_date     String
  rollcuts       RollCuts[]
  rolldetails    RollDetails[]
  payments       Payments[]
  completed      Boolean       @default(false)
  createdAt      DateTime      @default(now())
  updatedAt      DateTime?     @updatedAt
}

model RollCuts {
  id           String         @id @default(uuid()) @map("_id")
  color        String
  combined     String
  lining       String
  quantity     Int
  delivered    Int            @default(0)
  Roll         Roll?          @relation(fields: [rollId], references: [id])
  rollId       String?
  rollCutSizes RollCutSizes[]
}

model RollCutSizes {
  id        String   @id @default(uuid()) @map("_id")
  cutId     String
  size      String
  quantity  Int
  createdAt DateTime @default(now())
  RollCut   RollCuts @relation(fields: [cutId], references: [id])
}

model RollDetails {
  id        String   @id @default(uuid()) @map("_id")
  title     String
  quantity  Int
  createdAt DateTime @default(now())
  Roll      Roll?    @relation(fields: [rollId], references: [id])
  rollId    String?
}

model Payments {
  id        String    @id @default(uuid()) @map("_id")
  amount    String
  date      String
  status    Boolean?
  signature String?
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt
  Roll      Roll?     @relation(fields: [rollId], references: [id])
  rollId    String?
}

model Shipping {
  id             String   @id @default(uuid()) @map("_id")
  shipping_order Int
  name           String
  date           String
  address        String
  city           String
  province       String
  zip            String
  dni            String
  transport      String
  customer_note  String
  createdAt      DateTime @default(now())
}
